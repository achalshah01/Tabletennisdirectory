<% include partials/header.ejs %>


	<section>
		<h5 id="textHide">Text</h5>
		<% include partials/user-navigation.ejs %>

		<% include partials/site-navigation.ejs %>

	<div class="description">


		<h2>Sign In!</h2>
		<br>

		<br>
		<% if(message==='1') { %>
	    <main>

	      <h4>Please Login</h4>
	      <br>

	      <form action="/signin" method='POST'>
	<div class="signForm">

	<label for="email">E-mail ID:</label><br>
	<input type="text" id="email" name="emailid" required/>
	<br>
	<label for="password">Password:</label><br>
	<input type="password" id="password" name="password" required>
	<br><br>
	<input type="submit"  value="Sign in">
  </div>
	</form>
	<br>
	<h4>Don't have an account? <a href="/signup"><u>Sign Up!</u></a></h4>

	    </main>
	    <% } else { %>
	      <main>

	        <h2 class="writing">Incorrect Email ID or Password</h2>
	        <br>

	        <form action="/signin" method='post'>
	  <label for="email">E-mail ID:</label><br>
	  <input type="text" id="emailid" name="emailid" required/>
	  <br>
	  <label for="password2">Password:</label><br>
	  <input type="password" id="password2" name="password" required>
	  <br><br>
	  <input type="submit" value="Sign In">
	  </form>
	  <br>
	  <h4>Don't have an account? <a href="/signup"> <u>Sign Up!</u></h4>

	      </main>
	      <% } %>




	</div>
	</section>
		<% include partials/footer.ejs %>



